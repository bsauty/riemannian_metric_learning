<optimization-parameters deformetrica-min-version="3.0.0">

    <optimization-method-type>GradientAscent</optimization-method-type>

    <convergence-tolerance>1e-5</convergence-tolerance>

    <onset-age-proposal-std>2.</onset-age-proposal-std>
    <log-acceleration-proposal-std>0.05</log-acceleration-proposal-std>
    <sources-proposal-std>0.05</sources-proposal-std>

    <initialization-heuristic>Off</initialization-heuristic>
    <initial-step-size>1</initial-step-size>
    <scale-initial-step-size>Off</scale-initial-step-size>
    <max-iterations>100</max-iterations>
    <save-every-n-iters>1</save-every-n-iters>
    <?ignore <use-cuda>Off</use-cuda> ?>
    <memory-length>10</memory-length>
    <scale-initial-step-size>On</scale-initial-step-size>


</optimization-parameters>
